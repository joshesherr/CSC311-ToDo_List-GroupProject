<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane fx:id="root" prefHeight="700.0" prefWidth="800.0" stylesheets="@../css/loginStyling.css" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.todo_list.fxml_controllers.LoginController">
   <children>
      <VBox fx:id="loginContainer" alignment="CENTER" layoutX="176.0" layoutY="47.0" prefHeight="606.0" prefWidth="449.0">
         <children>
            <Label fx:id="signInLabel" text="Register">
               <VBox.margin>
                  <Insets bottom="20.0" />
               </VBox.margin></Label>
            <TextField fx:id="usernameRF" prefHeight="36.0" prefWidth="373.0" promptText="Username">
               <VBox.margin>
                  <Insets left="20.0" right="20.0" />
               </VBox.margin>
            </TextField>
            <HBox alignment="CENTER" prefHeight="26.0" prefWidth="350.0">
               <children>
                  <TextField fx:id="firstNameRF" prefHeight="26.0" prefWidth="307.0" promptText="First Name">
                     <HBox.margin>
                        <Insets right="10.0" />
                     </HBox.margin>
                  </TextField>
                  <TextField fx:id="lastNameRF" prefHeight="26.0" prefWidth="307.0" promptText="Last Name">
                     <HBox.margin>
                        <Insets left="10.0" />
                     </HBox.margin>
                  </TextField>
               </children>
               <VBox.margin>
                  <Insets left="20.0" right="20.0" top="10.0" />
               </VBox.margin>
            </HBox>
            <TextField fx:id="emailRF" prefHeight="36.0" prefWidth="373.0" promptText="Email">
               <VBox.margin>
                  <Insets left="20.0" right="20.0" top="10.0" />
               </VBox.margin>
            </TextField>
            <TextField fx:id="passwordRF" promptText="Password">
               <VBox.margin>
                  <Insets left="20.0" right="20.0" top="10.0" />
               </VBox.margin>
            </TextField>
            <Button fx:id="registerBtn" mnemonicParsing="false" onAction="#createAccount" prefHeight="30.0" prefWidth="164.0" text="Create Account">
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
            </Button>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Label text="Already have an account?" />
                  <Button fx:id="goToSignIn" mnemonicParsing="false" onAction="#goToSignIn" prefHeight="26.0" prefWidth="140.0" text="Sign In">
                     <HBox.margin>
                        <Insets left="10.0" />
                     </HBox.margin>
                  </Button>
               </children>
               <VBox.margin>
                  <Insets top="30.0" />
               </VBox.margin>
            </HBox>
         </children>
      </VBox>
   </children>
<!--   <stylesheets>-->
<!--      <URL value="@styling/loginStyling.css" />-->

<!--   </stylesheets>-->
</AnchorPane>
