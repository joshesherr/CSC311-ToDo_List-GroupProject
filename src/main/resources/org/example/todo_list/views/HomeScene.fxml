<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.effect.ColorAdjust?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane fx:id="root" prefHeight="600.0" prefWidth="900.0" stylesheets="@../css/globalStyle.css" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.todo_list.view_models.AppController">
   <children>
      <VBox prefHeight="850.0" prefWidth="1000.0" stylesheets="@../css/appStyling.css">
         <children>
            <MenuBar id="menuBar" fx:id="menuBar" prefHeight="36.0" prefWidth="1037.0">
               <menus>
                  <Menu id="menu" fx:id="menuBarFile" mnemonicParsing="false" text="File">
                     <items>
                        <MenuItem mnemonicParsing="false" text="Open" />
                        <MenuItem mnemonicParsing="false" text="Save" />
                        <MenuItem mnemonicParsing="false" text="Save As" />
                        <MenuItem mnemonicParsing="false" text="Preferences" />
                        <MenuItem mnemonicParsing="false" onAction="#logOut" text="Logout" />
                        <MenuItem mnemonicParsing="false" onAction="#exitProgram" text="Exit" />
                     </items>
                  </Menu>
                  <Menu id="menu" fx:id="menuBarCreate" mnemonicParsing="false" text="Create">
                     <items>
                        <MenuItem mnemonicParsing="false" onAction="#addListBtnPressed" text="List" />
                        <MenuItem mnemonicParsing="false" text="Task" />
                        <MenuItem mnemonicParsing="false" text="Group " />
                     </items>
                  </Menu>
                  <Menu id="menu" fx:id="menuBarEdit" mnemonicParsing="false" text="Edit">
                     <items>
                        <MenuItem mnemonicParsing="false" text="Delete" />
                        <MenuItem mnemonicParsing="false" text="Copy" />
                        <MenuItem mnemonicParsing="false" text="Paste" />
                     </items>
                  </Menu>
                  <Menu id="menu" fx:id="menuBarGroup" mnemonicParsing="false" text="Group">
                     <items>
                        <MenuItem mnemonicParsing="false" text="Select Group" />
                        <MenuItem mnemonicParsing="false" text="Remove member" />
                        <MenuItem mnemonicParsing="false" text="Add member" />
                     </items>
                  </Menu>
                  <Menu id="menu" fx:id="menuBarHelp" mnemonicParsing="false" text="Help">
                     <items>
                        <MenuItem mnemonicParsing="false" text="About" />
                     </items>
                  </Menu>
               </menus>
               <effect>
                  <ColorAdjust brightness="-0.17" />
               </effect>
            </MenuBar>
            <HBox fillHeight="false" prefHeight="800.0" prefWidth="1000.0" VBox.vgrow="ALWAYS">
               <children>
                  <VBox id="taskBar" alignment="TOP_CENTER" fillWidth="false" prefHeight="823.0" prefWidth="226.0" spacing="10.0" HBox.hgrow="NEVER">
                     <children>
                        <Button fx:id="homeBtn" mnemonicParsing="false" prefHeight="35.0" prefWidth="200.0" styleClass="side-btn" text="Home" />
                        <Button fx:id="addListBtn" mnemonicParsing="false" onAction="#addListBtnPressed" prefHeight="35.0" prefWidth="200.0" styleClass="side-btn" text="Add List" />
                        <Label fx:id="myTasksLabel" prefHeight="2.0" prefWidth="135.0" text="My Lists:" />
                        <Button fx:id="allTasksBtn" mnemonicParsing="false" prefHeight="35.0" prefWidth="208.0" styleClass="side-btn" text="All Lists" />
                        <Button fx:id="personalTasksBtn" mnemonicParsing="false" prefHeight="38.0" prefWidth="214.0" styleClass="side-btn" text="Pesonal" />
                        <Button fx:id="groupTasksBtn" mnemonicParsing="false" prefHeight="38.0" prefWidth="206.0" styleClass="side-btn" text="Group" />
                        <Label fx:id="calendarLabel" prefHeight="0.0" prefWidth="135.0" text="Calendar:" />
                        <Button fx:id="daysTasksBtn" mnemonicParsing="false" prefHeight="38.0" prefWidth="205.0" styleClass="side-btn" text="3 Days" />
                        <Button fx:id="weekTasksBtn" mnemonicParsing="false" prefHeight="38.0" prefWidth="220.0" styleClass="side-btn" text="This Week" />
                        <Button fx:id="monthTasksBtn" mnemonicParsing="false" prefHeight="38.0" prefWidth="206.0" styleClass="side-btn" text="This Month" />
                        <Label fx:id="tagsLabel" prefHeight="15.0" prefWidth="176.0" text="Tags:" />
                        <Button fx:id="importantTasksBtn" mnemonicParsing="false" prefHeight="38.0" prefWidth="216.0" styleClass="side-btn" text="Important" />
                        <Button fx:id="criticalTasksBtn" mnemonicParsing="false" prefHeight="38.0" prefWidth="215.0" styleClass="side-btn" text="Critical" />
                        <Button fx:id="homeStuffTasksBtn" mnemonicParsing="false" prefHeight="38.0" prefWidth="135.0" styleClass="side-btn" text="Home Stuff" />
                     </children>
                     <padding>
                        <Insets left="10.0" right="10.0" />
                     </padding>
                  </VBox>
                  <ScrollPane id="scrollPane" fx:id="scrollPane" pannable="true" prefHeight="820.0" prefWidth="774.0" vbarPolicy="NEVER" HBox.hgrow="ALWAYS">
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                     <content>
                        <VBox prefHeight="719.0" prefWidth="756.0">
                           <children>
                              <HBox fx:id="listBox" prefHeight="365.0" prefWidth="756.0" spacing="16.0" />
                              <HBox fx:id="taskDetailsBox" prefHeight="361.0" prefWidth="756.0" />
                           </children>
                        </VBox>
                     </content>
                  </ScrollPane>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
