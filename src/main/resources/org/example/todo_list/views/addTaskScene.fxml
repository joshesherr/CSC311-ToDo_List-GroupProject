<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.TextFlow?>

<AnchorPane fx:id="root" prefHeight="700.0" prefWidth="800.0" stylesheets="@../css/addTaskStyling.css" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.todo_list.view_models.AddTaskController">
   <children>
      <VBox fx:id="createTaskContainer" alignment="CENTER" layoutX="200.0" layoutY="100.0" prefHeight="500.0" prefWidth="400.0">
         <children>
            <HBox alignment="CENTER" prefHeight="25.0" prefWidth="340.0" spacing="10.0">
               <children>
                  <Label fx:id="nameLabel" text="Task Name:" />
                  <TextField fx:id="nameTextField" prefHeight="14.0" prefWidth="174.0" />
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="52.0" prefWidth="360.0" spacing="10.0">
               <children>
                  <Button fx:id="shareTaskBtn" mnemonicParsing="false" prefHeight="77.0" prefWidth="125.0" text="Share Task" />
                  <Button fx:id="personalTaskBtn" mnemonicParsing="false" prefHeight="55.0" prefWidth="125.0" text="Personal" />
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="13.0" prefWidth="360.0" spacing="10.0">
               <children>
                  <Label fx:id="dueDateLabel" text="Due Date:" />
                  <DatePicker fx:id="dueDatePicker" />
               </children>
            </HBox>
            <HBox fx:id="addTagBtnBox" alignment="CENTER" spacing="10.0">
               <children>
                  <Button fx:id="addTagBtn" mnemonicParsing="false" onAction="#addTagClicked" text="Add Tag" />
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="35.0" prefWidth="400.0">
               <children>
                  <Label fx:id="descriptionLabel" prefHeight="30.0" prefWidth="82.0" text="Description:" />
               </children>
            </HBox>
            <TextFlow prefHeight="115.0" prefWidth="355.0" textAlignment="CENTER">
               <children>
                  <TextField fx:id="descriptionTF" alignment="CENTER" prefHeight="105.0" prefWidth="230.0" />
               </children>
            </TextFlow>
            <Button fx:id="createTaskBtn" mnemonicParsing="false" onAction="#createTask" text="Create Task" />
         </children>
      </VBox>
   </children>
</AnchorPane>
