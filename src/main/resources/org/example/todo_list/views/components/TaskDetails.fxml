<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox id="root" fx:id="root" alignment="CENTER_LEFT" prefHeight="254.0" prefWidth="229.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.todo_list.view_models.TaskDetailsController">
   <children>
      <HBox alignment="TOP_RIGHT" prefHeight="60.0" prefWidth="209.0" VBox.vgrow="ALWAYS">
         <children>
            <Button fx:id="hideBtn" maxHeight="57.0" mnemonicParsing="false" onAction="#hideDetails" prefHeight="57.0" prefWidth="20.0" />
         </children>
      </HBox>
      <HBox alignment="CENTER" prefHeight="25.0" prefWidth="340.0" spacing="10.0">
         <children>
            <Label fx:id="nameLabel" text="Task Name:" />
            <TextField fx:id="taskName" prefHeight="23.0" prefWidth="141.0" />
         </children>
      </HBox>
      <HBox alignment="CENTER" prefHeight="13.0" prefWidth="360.0" spacing="10.0">
         <children>
            <Label fx:id="dueDateLabel" text="Due Date:" />
            <DatePicker fx:id="taskDueDate" />
         </children>
      </HBox>
      <HBox fx:id="addTagBtnBox" alignment="CENTER" spacing="10.0">
         <children>
            <Button fx:id="addTagBtn" mnemonicParsing="false" onAction="#addTagClicked" text="Add Tag" />
         </children>
      </HBox>
      <HBox alignment="CENTER" prefHeight="25.0" prefWidth="206.0">
         <children>
            <Label fx:id="descriptionLabel" prefHeight="30.0" prefWidth="82.0" text="Description:" />
         </children>
      </HBox>
      <TextArea fx:id="taskDescription" prefHeight="109.0" prefWidth="209.0" promptText="Description" wrapText="true" />
      <Button fx:id="updateTaskBtn" mnemonicParsing="false" text="Update Task" />
   </children>
   <stylesheets>
      <URL value="@../../css/globalStyle.css" />
      <URL value="@../../css/addTaskStyling.css" />
   </stylesheets>
</VBox>
