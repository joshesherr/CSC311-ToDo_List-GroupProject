<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox id="root" fx:id="root" alignment="CENTER_LEFT" prefHeight="217.0" prefWidth="176.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.todo_list.view_models.TaskDetailsController">
   <children>
      <HBox alignment="TOP_RIGHT" prefHeight="0.0" prefWidth="156.0" VBox.vgrow="ALWAYS">
         <children>
            <Button fx:id="hideBtn" maxHeight="113.0" mnemonicParsing="false" onAction="#hideDetails" prefHeight="19.0" prefWidth="0.0" styleClass="icon_button" />
         </children>
      </HBox>
      <Separator prefHeight="5.0" prefWidth="180.0">
         <VBox.margin>
            <Insets bottom="-1.0" left="-1.0" right="-1.0" top="-1.0" />
         </VBox.margin>
      </Separator>
      <TextField fx:id="taskName" prefHeight="21.0" prefWidth="171.0" promptText="Task Name" />
      <DatePicker fx:id="taskDueDate" prefHeight="21.0" prefWidth="261.0" promptText="Due Date" />
      <HBox fx:id="addTagBtnBox" alignment="CENTER" spacing="10.0">
         <children>
            <Button fx:id="addTagBtn" maxHeight="23.0" maxWidth="58.0" mnemonicParsing="false" onAction="#addTagClicked" prefHeight="21.0" prefWidth="58.0" text="Add Tag" />
         </children>
      </HBox>
      <TextArea fx:id="taskDescription" prefHeight="109.0" prefWidth="164.0" promptText="Description" wrapText="true" />
      <HBox alignment="TOP_RIGHT" prefHeight="0.0" prefWidth="156.0" spacing="2.0">
         <children>
            <Button fx:id="copyTaskBtn" maxHeight="57.0" minHeight="0.0" mnemonicParsing="false" prefHeight="0.0" prefWidth="20.0" styleClass="icon_button" />
            <Button fx:id="pasteTaskBtn" maxHeight="57.0" minHeight="0.0" mnemonicParsing="false" prefHeight="0.0" prefWidth="20.0" styleClass="icon_button" />
            <Button fx:id="deleteTaskBtn" maxHeight="57.0" mnemonicParsing="false" onAction="#deleteTask" prefHeight="19.0" prefWidth="0.0" styleClass="icon_button" />
         </children>
      </HBox>
   </children>
   <stylesheets>
      <URL value="@../../css/globalStyle.css" />
      <URL value="@../../css/addTaskStyling.css" />
   </stylesheets>
</VBox>
