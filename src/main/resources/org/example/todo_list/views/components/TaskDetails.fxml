<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox id="root" fx:id="root" alignment="TOP_CENTER" prefHeight="365.0" prefWidth="396.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.todo_list.view_models.TaskDetailsController">
   <children>
      <VBox>
         <VBox.margin>
            <Insets top="-50.0" />
         </VBox.margin>
         <children>
            <HBox alignment="TOP_RIGHT" maxHeight="5.0" prefHeight="5.0" prefWidth="376.0">
               <children>
                  <Button fx:id="hideBtn" maxHeight="19.0" mnemonicParsing="false" onAction="#hideDetails" prefHeight="19.0" prefWidth="0.0" styleClass="icon_button" />
               </children>
               <padding>
                  <Insets bottom="15.0" />
               </padding>
               <VBox.margin>
                  <Insets bottom="10.0" top="-30.0" />
               </VBox.margin>
            </HBox>
            <TextField fx:id="taskName" alignment="CENTER" prefHeight="21.0" prefWidth="171.0" promptText="Task Name">
               <VBox.margin>
                  <Insets bottom="10.0" top="-20.0" />
               </VBox.margin>
            </TextField>
            <Separator prefHeight="5.0" prefWidth="180.0">
               <VBox.margin>
                  <Insets bottom="10.0" left="-1.0" right="-1.0" top="-10.0" />
               </VBox.margin>
            </Separator>
         </children>
      </VBox>
      <DatePicker fx:id="taskDueDate" prefHeight="18.0" prefWidth="170.0" promptText="Due Date">
         <VBox.margin>
            <Insets top="-10.0" />
         </VBox.margin></DatePicker>
      <ComboBox fx:id="priorityComboBox" prefWidth="100.0" promptText="Task Priority">
         <VBox.margin>
            <Insets bottom="5.0" top="5.0" />
         </VBox.margin>
      </ComboBox>
      <VBox>
         <children>
            <HBox fx:id="addTagBtnBox" alignment="CENTER" spacing="10.0">
               <children>
                  <Button id="addTagBtn" fx:id="addTagBtn" maxHeight="25.0" maxWidth="76.0" mnemonicParsing="false" onAction="#addTagClicked" prefHeight="22.0" prefWidth="85.0" text="Add Tag">
                     <font>
                        <Font size="8.0" />
                     </font>
                  </Button>
               </children>
               <padding>
                  <Insets bottom="5.0" top="5.0" />
               </padding>
            </HBox>
            <HBox fx:id="lowerTagBtnBox" alignment="CENTER" prefHeight="30.0" prefWidth="376.0" spacing="10.0">
               <padding>
                  <Insets bottom="5.0" top="5.0" />
               </padding>
            </HBox>
         </children>
      </VBox>
      <TextArea fx:id="taskDescription" prefHeight="119.0" prefWidth="376.0" promptText="Description" wrapText="true" />
      <HBox alignment="TOP_RIGHT" prefHeight="0.0" prefWidth="156.0" spacing="2.0">
         <children>
            <Button fx:id="copyTaskBtn" maxHeight="57.0" minHeight="0.0" mnemonicParsing="false" prefHeight="0.0" prefWidth="20.0" styleClass="icon_button" />
            <Button fx:id="pasteTaskBtn" maxHeight="57.0" minHeight="0.0" mnemonicParsing="false" prefHeight="0.0" prefWidth="20.0" styleClass="icon_button" />
            <Button fx:id="deleteTaskBtn" maxHeight="57.0" mnemonicParsing="false" onAction="#deleteTask" prefHeight="19.0" prefWidth="0.0" styleClass="icon_button" />
         </children>
         <VBox.margin>
            <Insets bottom="-70.0" top="20.0" />
         </VBox.margin>
      </HBox>
   </children>
   <stylesheets>
      <URL value="@../../css/globalStyle.css" />
      <URL value="@../../css/appStyling.css" />
      <URL value="@../../css/addTaskStyling.css" />
   </stylesheets>
</VBox>
