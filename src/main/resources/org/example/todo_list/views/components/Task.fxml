<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Rectangle?>

<VBox fx:id="root" alignment="CENTER_LEFT" prefHeight="9.0" prefWidth="266.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.todo_list.view_models.TaskController">
   <children>
      <HBox fx:id="taskBox" alignment="CENTER_LEFT" prefHeight="0.0" prefWidth="200.0" spacing="8.0" VBox.vgrow="ALWAYS">
         <children>
            <ToggleButton fx:id="taskToggleCheck" focusTraversable="false" maxHeight="24.0" maxWidth="24.0" minHeight="7.0" minWidth="20.0" mnemonicParsing="false" prefHeight="20.0" prefWidth="20.0">
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
               <HBox.margin>
                  <Insets top="2.0" />
               </HBox.margin>
            </ToggleButton>
            <TextField fx:id="taskNameField" prefHeight="25.0" prefWidth="255.0" promptText="Task Name" />
            <Rectangle fx:id="priorityColorRect" arcHeight="5.0" arcWidth="5.0" disable="true" fill="#008000" height="27.0" stroke="BLACK" strokeType="INSIDE" style="-fx-stroke-width: .3;" translateX="-2.0" width="10.0">
               <HBox.margin>
                  <Insets />
               </HBox.margin></Rectangle>
         </children>
         <VBox.margin>
            <Insets />
         </VBox.margin>
         <padding>
            <Insets left="5.0" />
         </padding>
      </HBox>
   </children>
   <stylesheets>
      <URL value="@../../css/globalStyle.css" />
      <URL value="@../../css/taskStyle.css" />
   </stylesheets>
</VBox>
